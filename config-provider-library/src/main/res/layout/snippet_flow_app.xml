<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/flow_app_item_selector">

    <ImageView
        android:id="@+id/flow_app_icon"
        android:layout_width="@dimen/app_icon_height"
        android:layout_height="@dimen/app_icon_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_horizontal"/>

    <TextView
        android:id="@+id/flow_app_label"
        style="@style/ConfigItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/flow_app_icon"
        android:ellipsize="marquee"
        android:paddingLeft="@dimen/margin_horizontal"
        android:paddingRight="@dimen/margin_horizontal"
        android:singleLine="true"/>

    <ImageButton
        android:id="@+id/flow_app_details"
        android:layout_width="@dimen/flow_app_info_width"
        android:layout_height="@dimen/flow_app_info_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha="0.6"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/margin_horizontal"
        android:paddingRight="@dimen/margin_horizontal"
        android:scaleType="center"
        android:src="@drawable/ic_info_outline_black_24dp"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/flow_app_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/flow_app_details"
        android:theme="@style/FlowAppSwitchTheme"/>

</RelativeLayout>
